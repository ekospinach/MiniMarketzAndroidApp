<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">



    <!-- Name Label -->


    <ImageView
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:id="@+id/imageView" android:layout_gravity="center|top"
            android:layout_marginLeft="5dip"
            android:background="@drawable/user" android:layout_marginTop="5dip"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#43bd00"
                android:textSize="20dip"
                android:paddingTop="6dip"
                android:paddingBottom="2dip"
                android:layout_marginLeft="5dip" android:text="Nama Barang" android:textStyle="bold"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/_id"
                android:textSize="14sp"
                android:layout_marginLeft="5dip"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tipe" android:layout_marginLeft="5dip"/>
        <TextView
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:id="@+id/harga"
                android:textSize="1sp"
                android:layout_marginLeft="5dip" android:visibility="invisible"/>
        <TextView
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:id="@+id/stock" android:layout_gravity="center_vertical|left" android:layout_marginLeft="5dip"
                android:visibility="invisible" android:textSize="1dip"/>
        </LinearLayout>
</LinearLayout>
</LinearLayout>
